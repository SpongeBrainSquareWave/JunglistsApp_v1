<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    android:background="@color/green">
    <!--android:singleLine="true"-!!-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="19"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="18sp"
            tools:text="Real Bad Boys"
            android:layout_gravity="center"
            android:textColor="@color/gold"/>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/artist_textview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="Artist Name"
                android:layout_gravity="center"
                android:textColor="@color/gold"/>

        </LinearLayout>
        <!--<TextView
            android:id="@+id/track_length_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="18sp"
            tools:text="5:32" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/true_tactix_the_calling"
            android:id="@+id/track_image"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/play_button_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:padding="@dimen/activity_horizontal_margin"
                tools:src="@mipmap/play_button_image" />

            <ImageView
                android:id="@+id/track_details_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_horizontal_margin"
                tools:src="@mipmap/info_button_image" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>