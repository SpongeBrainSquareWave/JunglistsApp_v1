<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/red"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/track_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingVertical="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/true_tactix_the_calling" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/play_ui_background2">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/back_button_image" />

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/menu_button_image" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@+id/rewind_button"
            android:layout_toStartOf="@+id/rewind_button"
            android:src="@mipmap/previous_track_image" />

        <ImageView
            android:id="@+id/rewind_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/play_button_image"
            android:layout_toStartOf="@+id/play_button_image"
            android:src="@mipmap/rewind_button_image" />

        <ImageView
            android:id="@+id/play_button_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/play_button_image" />


        <ImageView
            android:id="@+id/fast_forward_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/play_button_image"
            android:layout_toRightOf="@+id/play_button_image"
            android:src="@mipmap/fastforward_image" />

        <ImageView
            android:id="@+id/next_track"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/fast_forward_button"
            android:layout_toRightOf="@+id/fast_forward_button"
            android:src="@mipmap/next_track_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_button_image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@mipmap/eq_button_image"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:src="@mipmap/shuffle_button_image"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"

                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@mipmap/repeat_button_image"
                android:textSize="30sp" />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#3f8d1b"
        android:orientation="vertical"
        android:paddingHorizontal="14dp">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:background="#a8ff0307"
            android:progress="3"
            android:scrollbarStyle="outsideOverlay"
            android:thumb="@color/gold" />

        <TextView
            android:id="@+id/artist_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:text="Artist"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/track_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:text="Song Title"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:text="Record Label"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:textStyle="italic" />


    </LinearLayout>


</LinearLayout>